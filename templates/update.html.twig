    }
</style>
    <div id="feedback-form">
  <h2 class="header">Modification</h2>
  <div>
    <form action="/update" method="POST">
    <!-- Prénom -->
      <label for="prenom">Prénom de l'animal :</label>
      <input type="text" name="nom" placeholder="Prénom" value="{{ animal[0].nom }}" required></input>
      <!-- Espèce -->
      <label for="espece">Espèce de l'animal :</label>
      <select name="espece">
          <option value="Chien" {% if animal[0].espece == 'Chien' %}selected{% endif %}>Chien</option>
          <option value="Chat" {% if animal[0].espece == 'Chat' %}selected{% endif %}>Chat</option>
      </select>
      <!-- Age -->
      <label for="age">Age de l'animal :</label>
      <input type="number" placeholder="Age" name="age" min="1" max="99" value="{{ animal[0].age }}" required>
      <!-- Description -->
      <label for="description">Décrivez le comportement de l'animal, sa personnalité :</label>
      <textarea id="description" name="description" rows="5" cols="33" maxlength="255" required>{{ animal[0].description }}</textarea>
      <!-- Genre -->
      <label for="genre">Genre de l'animal :</label>
      <select name="genre">
          <option value="Femelle" {% if animal[0].genre == 'Femelle' %}selected{% endif %}>Femelle</option>
          <option value="Mâle" {% if animal[0].genre == 'Mâle' %}selected{% endif %}>Mâle</option>
      </select>

      <button type="submit">Enregistrer</button>
    </form>
  </div>
</div>

{% endblock %}