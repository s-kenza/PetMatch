{% extends 'navbar.html.twig' %}

{% block body %}
<style>
#feedback-form {
  width: 580px;
  margin: 0 auto;
  padding: 20px 50px 40px;
  font-family: sans-serif;
}

#feedback-form * {
    box-sizing: border-box;
}

#feedback-form h2{
  text-align: center;
  margin-bottom: 30px;
}

#feedback-form input {
  margin-bottom: 15px;
}

#feedback-form input[type=text] {
  display: block;
  height: 32px;
  padding: 6px 16px;
  width: 100%;
  border: none;
  background-color: #f3f3f3;
}

#feedback-form label {
  color: #777;
  font-size: 0.8em;
}

#feedback-form input[type=checkbox] {
  float: left;
}

#feedback-form input:not(:checked) + #feedback-phone {
  height: 0;
  padding-top: 0;
  padding-bottom: 0;
}

#feedback-form #feedback-phone {
  transition: .3s;
}

#feedback-form button[type=submit] {
  display: block;
  margin: 20px auto 0;
  width: 150px;
  height: 40px;
  border-radius: 25px;
  border: none;
  color: #eee;
  font-weight: 700;
  box-shadow: 1px 4px 10px 1px #aaa;
  
  background: #207cca;
}
input {
      border: none;
      border-bottom: 1px solid #bdc3c7;
      padding: 5px 3px;
      width: 70%;
      display: block;
      margin: 20px auto;
      transition: .7s;
    }
    input::placeholder { color: rgba(0,0,0,.4); }
    input:focus {
      outline-style:none;
      box-shadow: 0 1px 0 #bdc3c7;
      border-top: transparent;
      transition: 200ms;
    }
    input[type="radio"] {
      display: none;
      top: 0;
      left: 0;
      z-index: 20;
    }
    select {
      border: none;
      border-bottom: 1px solid #bdc3c7;
      padding: 5px 3px;
      width: 70%;
      display: block;
      margin: 15px auto;
      margin-bottom: 20px;
      margin-top: 20px;
      transition: .7s;
    }

    select:focus {
      outline-style:none;
      box-shadow: 0 1px 0 #bdc3c7;
      border-top: transparent;
      transition: 200ms;
    }
    textarea {
      border: 1px solid #bdc3c7;
      border-radius: 5px;
      border-bottom: 1px solid #bdc3c7;
      padding: 5px 3px;
      width: 70%;
      display: block;
      margin: 15px auto;
      transition: .7s;
      resize: none;
    }

    textarea::placeholder {
      color: rgba(0, 0, 0, .4);
    }

    textarea:focus {
      outline-style: none;
      box-shadow: 0 1px 0 #bdc3c7;
      border-top: transparent;
      transition: 200ms;
    }

